<!DOCTYPE html>
<html>
<head>
  <title>Change Password</title>
  <style>
    body { font-family: Arial; background:#f4f6f9; }
    .box { width:320px; margin:100px auto; padding:25px; background:#fff; border-radius:8px; box-shadow:0 0 10px #ccc; }
    input { width:100%; padding:10px; margin:10px 0; }
    button { width:100%; padding:10px; background:#4f46e5; color:#fff; border:none; }
    .msg { color:green; }
    .err { color:red; }
  </style>
</head>
<body>
  <div class="box">
    <h2>Change Password</h2>

    <% if (typeof error !== 'undefined') { %>
      <div class="err"><%= error %></div>
    <% } %>

    <% if (typeof success !== 'undefined') { %>
      <div class="msg"><%= success %></div>
    <% } %>

    <form method="POST" action="/admin/change-password">
      <input name="oldPass" type="password" placeholder="Old Password" required>
      <input name="newPass" type="password" placeholder="New Password" required>
      <button>Update</button>
    </form>
  </div>
</body>
</html>