<!DOCTYPE html>
<html>
<head>
  <title>Admin Orders</title>
</head>
<body>

<h1>Orders</h1>

<table border="1">
<tr>
  <th>ID</th>
  <th>Name</th>
  <th>Email</th>
  <th>Service</th>
  <th>Amount</th>
  <th>Status</th>
  <th>Invoice</th>
  <th>Update</th>
</tr>

<% orders.forEach(o=>{ %>
<tr>
  <td><%= o.orderId %></td>
  <td><%= o.name %></td>
  <td><%= o.email %></td>
  <td><%= o.service %></td>
  <td>â‚¹<%= o.price %></td>
  <td><%= o.status %></td>
  <td><a href="/invoice/<%= o.orderId %>">PDF</a></td>
  <td>
    <form method="POST" action="/admin/update-status">
      <input type="hidden" name="orderId" value="<%= o.orderId %>">
      <select name="status">
        <option>PENDING</option>
        <option>PAID</option>
        <option>FAILED</option>
        <option>COMPLETED</option>
      </select>
      <button>Save</button>
    </form>
  </td>
</tr>
<% }) %>

</table>

</body>
</html>