/* ===== MOBILE RESPONSIVE FIX ===== */

@media (max-width: 768px) {

  .hero {
    padding: 40px 20px;
    text-align: center;
  }

  .hero h1 {
    font-size: 26px;
    line-height: 1.3;
  }

  .hero p {
    font-size: 15px;
  }

  .btn,
  .btn-primary,
  .btn-secondary {
    width: 100%;
    padding: 14px;
    font-size: 16px;
    margin: 8px 0;
  }

  .services {
    grid-template-columns: 1fr;
  }

  .portfolio {
    grid-template-columns: 1fr;
  }

  .testimonial-box {
    margin-bottom: 20px;
  }

  footer {
    text-align: center;
  }

  .footer-columns {
    flex-direction: column;
    gap: 20px;
  }

  .footer-columns ul li a {
    font-size: 14px;
    padding: 6px 0;
    display: block;
  }

  .footer-bottom {
    font-size: 13px;
  }
}