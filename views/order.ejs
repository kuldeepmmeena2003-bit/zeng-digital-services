<%- include("partials/header") %>

<section class="container page">
  <h1>Order Service</h1>

  <form action="/checkout" method="POST" class="contact-form">
    <input name="name" placeholder="Your Name" required />
    <input name="email" type="email" placeholder="Email" required />

    <select name="service" id="serviceSelect" required>
      <option value="">Select Service</option>
      <% for (let s in prices) { %>
        <option value="<%= s %>"><%= s %></option>
      <% } %>
    </select>

    <input id="amount" name="amount" placeholder="Amount â‚¹" readonly />

    <button class="btn-primary">Proceed to Payment</button>
  </form>
</section>

<script>
  const prices = <%- JSON.stringify(prices) %>;
  const select = document.getElementById("serviceSelect");
  const amount = document.getElementById("amount");

  select.addEventListener("change", () => {
    amount.value = prices[select.value] || "";
  });
</script>

