<!DOCTYPE html>
<html>
<head>
  <title>Orders</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<%- include("partials/header") %>

<div class="dashboard">

<aside class="sidebar">
  <h2>Admin</h2>
  <a href="/">Dashboard</a>
  <a href="/admin">Analytics</a>
  <a href="/orders">Orders</a>
</aside>

<main class="dash-main">
<h1>Manage Orders</h1>

<div class="card">
<table>
<tr>
<th>Service</th>
<th>Price</th>
<th>Status</th>
<th>Action</th>
</tr>

<% orders.forEach(o=>{ %>
<tr>
<td><%= o.service %></td>
<td>â‚¹<%= o.price %></td>

<td>
<form method="POST" action="/orders/<%= o._id %>/status">
<select name="status">
<option <%= o.status==="Active"?"selected":"" %>>Active</option>
<option <%= o.status==="Completed"?"selected":"" %>>Completed</option>
</select>
<button class="btn">Save</button>
</form>
</td>

<td>
<form method="POST" action="/orders/<%= o._id %>/delete">
<button class="btn">Delete</button>
</form>
</td>

</tr>
<% }) %>

</table>
</div>

</main>
</div>
</body>
</html>