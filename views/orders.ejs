<!DOCTYPE html>
<html>
<head>
  <title>Admin Orders</title>
  <style>
    body { font-family: Arial; background:#f5f5f5; padding:40px;}
    table { width:100%; background:white; border-collapse: collapse;}
    th,td { padding:12px; border-bottom:1px solid #ddd; text-align:left;}
    th { background:#6c2bd9; color:white;}
    .pending { color:orange; font-weight:bold;}
    .paid { color:green; font-weight:bold;}
    button { background:#6c2bd9; color:white; border:none; padding:8px 12px; cursor:pointer;}
  </style>
</head>
<body>

<h2>Admin Orders</h2>

<table>
  <tr>
    <th>OrderId</th>
    <th>Name</th>
    <th>Service</th>
    <th>Amount</th>
    <th>UTR</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

  <% orders.forEach(order => { %>
    <tr>
      <td><%= order.orderId %></td>
      <td><%= order.name %></td>
      <td><%= order.service %></td>
      <td>₹<%= order.amount %></td>
      <td><%= order.utr || "-" %></td>

      <td class="<%= order.status==='Paid'?'paid':'pending' %>">
        <%= order.status %>
      </td>

      <td>
        <% if(order.status !== 'Paid'){ %>
          <form action="/admin/verify/<%= order.orderId %>" method="POST">
            <button>Verify</button>
          </form>
        <% } else { %>
          ✔
        <% } %>
      </td>
    </tr>
  <% }) %>

</table>

</body>
</html>