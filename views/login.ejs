<%- include("./partials/header") %>

<section class="container" style="padding:80px 0; text-align:center;">
  <h1>Login</h1>
  <p style="color:#bbb;">Access your Zeng Digital Services account</p>

  <form method="POST" action="/auth/login" style="max-width:400px;margin:auto;margin-top:30px;">

    <input 
      type="email" 
      name="email" 
      placeholder="Email" 
      required
      style="width:100%;padding:12px;margin-bottom:15px;border-radius:8px;border:1px solid #333;background:#0b0b0b;color:#fff;"
    >

    <input 
      type="password" 
      name="password" 
      placeholder="Password" 
      required
      style="width:100%;padding:12px;margin-bottom:15px;border-radius:8px;border:1px solid #333;background:#0b0b0b;color:#fff;"
    >

    <button class="btn-primary" style="width:100%;">Login</button>

  </form>

  <p style="margin-top:20px;color:#aaa;">
    Don't have an account? <a href="/auth/register">Register</a>
  </p>
</section>

<%- include("./partials/footer") %>