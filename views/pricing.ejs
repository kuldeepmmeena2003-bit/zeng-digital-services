<!DOCTYPE html>
<html>
<head>
  <title>Pricing</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<%- include("partials/header") %>

<section class="pricing">
  <h1>Our Services</h1>

  <form action="/order" method="POST" class="order-form">
    <input type="text" name="name" placeholder="Your Name" required>
    <input type="email" name="email" placeholder="Your Email" required>

    <select name="service" id="serviceSelect" required>
      <option value="">Select Service</option>
      <% for(let s in services){ %>
        <option value="<%= s %>"><%= s %> - ₹<%= services[s] %></option>
      <% } %>
    </select>

    <input type="text" id="priceBox" placeholder="Price" readonly>

    <button type="submit">Order Now</button>
  </form>
</section>

<script>
  const prices = <%- JSON.stringify(services) %>;
  const serviceSelect = document.getElementById("serviceSelect");
  const priceBox = document.getElementById("priceBox");

  serviceSelect.addEventListener("change", () => {
    const val = serviceSelect.value;
    priceBox.value = val ? "₹" + prices[val] : "";
  });
</script>

</body>
</html>